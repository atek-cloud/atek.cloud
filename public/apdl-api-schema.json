      "enum": [
        "api"
      ]
    },
    "definition": {
      "type": "object",
      "properties": {
        "methods": {
          "type": "object",
          "patternProperties": {
            ".*": {
              "type": "object",
              "properties": {
                "description": {
                  "type": "string"
                },
                "params": {
                  "oneOf": [
                    {
                      "type": "object"
                    },
                    {
                      "type": "array",
                      "items": {
                        "type": "object"
                      }
                    }
                  ]
                },
                "response": {
                  "type": "object"
                }
              }
            }
          }
        },
        "emitters": {
          "type": "object",
          "patternProperties": {
            ".*": {
              "type": "object",
              "properties": {
                "description": {
                  "type": "string"
                },
                "params": {
                  "oneOf": [
                    {
                      "type": "object"
                    },
                    {
                      "type": "array",
                      "items": {
                        "type": "object"
                      }
                    }
                  ]
                },
                "events": {
                  "type": "object",
                  "patternProperties": {
                    ".*": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}